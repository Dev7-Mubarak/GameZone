@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if(User.IsInRole(Rols.rolUser))
    {
        <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                <button type="submit" class="nav-link btn btn-outline-primary rounded-pill h-100 text-dark">تسجيل الخروج</button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link btn text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
        </li>
    }
    else if(User.IsInRole(Rols.rolAdmin))
    {
       <li class="nav-item">
           <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Admin" })">
               <button type="submit" class="nav-link btn btn-outline-primary rounded-pill h-100 text-dark">تسجيل الخروج</button>
           </form>
       </li>
       <li class="nav-item">
           <a class="nav-link btn text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
       </li>
    }
    else
    {
       <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Admin" })">
            <button type="submit" class="nav-link btn btn-outline-primary rounded-pill h-100 text-dark">تسجيل الخروج</button>
        </form>
       </li>
       <li class="nav-item">
           <a class="nav-link btn text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
       </li>
    }

}
else
{
    <li class="nav-item">
       <a class="btn btn-outline-primary rounded-pill" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary ms-2 ms-lg-2 rounded-pill" asp-area="Identity" asp-page="/Account/Register">انشاء حساب</a>
    </li>
}
</ul>