@model GameZone.Models.ViewModels.UserRolesViewModel

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_DoashBoardLayout.cshtml";

}

<form method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2>User Name: @Model.userName</h2>
            Add Or Remove Roles
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="userId"/>

            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].roleName">
                    <input asp-for="@Model.Roles[i].useRole" class="form-check-input">
                    <label class="form-check-label" asp-for="@Model.Roles[i].useRole">
                        @Model.Roles[i].roleName
                    </label>
                </div>
            }

            <div asp-validation-summary="All" class="text-danger">
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-danger">Canel</a>
        </div>
    </div>
</form>