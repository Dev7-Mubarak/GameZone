@model IEnumerable<Game>

@{
    Layout = "~/Views/Shared/_DoashBoardLayout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5" role="alert">
        <h4 class="alert-heading">No games!</h4>
        <p class="mb-0">No games were added yet.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-bordered border-primary">
            <tbody>
                @foreach (var game in Model)
                {
                    <tr class="border-1 border-warning">
                        <td>
                            <div class="d-flex">
                                <div class="pr-4">
                                    <img src="@($"{FileSetings.ImagesPath}/{game.Cover}")" alt="@game.Name" style="max-width: 70px" />
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4>@game.Name</h4>
                                    <h5>@game.Category.Name</h5>
                                </div>
                            </div>
                        </td>

                        <td class="align-middle">
                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-primary rounded rounded-3 mr-2">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-controller="Games" asp-area="Admin" onclick="return confirm('Are You Sure From Deleted... ?')" asp-route-id="@game.Id" class="btn btn-primary rounded rounded-3 mr-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts{
    <script src="~/js/game-index.js" asp-append-version="true"></script>
}