@model IEnumerable<GameZone.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DoashBoardLayout.cshtml";
}


@if (Model.Any())
{
    <h3 class="text-dark text-center">
        Rest Name: @Model.FirstOrDefault(x => x.RestId > 0).Rest.Name
    </h3>
}

<p class="btn btn-primary">
    <a class="text-white" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPepleAllowed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceInHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Space)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfPepleAllowed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceInHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Space)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are You Sure From Deleted... ?')">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
