@model CreateRoomViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DoashBoardLayout.cshtml";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="room.Name" class="control-label"></label>
                <input asp-for="room.Name" class="form-control" />
                <span asp-validation-for="room.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="room.NumberOfPepleAllowed" class="control-label"></label>
                <input asp-for="room.NumberOfPepleAllowed" class="form-control" />
                <span asp-validation-for="room.NumberOfPepleAllowed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="room.PriceInHour" class="control-label"></label>
                <input asp-for="room.PriceInHour" class="form-control" />
                <span asp-validation-for="room.PriceInHour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="room.Space" class="control-label"></label>
                <input asp-for="room.Space" class="form-control" />
                <span asp-validation-for="room.Space" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rest.Name" class="control-label"></label>
                <input asp-for="rest.Name" class="form-control" disabled />
            </div>
            <input asp-for="room.RestId" type="hidden" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
